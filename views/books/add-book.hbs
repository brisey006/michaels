<div class="row justify-content-center">
    <div class="col-12 col-lg-8 col-xl-6">
        <div class="card">
            <div class="card-body">
                <h2>Add Book</h2>
                <form method="POST" novalidate> 
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="title">Book Title</label>
                                <input type="text" id="title" name="title" {{#if formData}} value="{{formData.title}}"{{/if}} class="form-control {{#if titleError}}parsley-error{{/if}}" placeholder="Book Title">
                                {{#if titleError}}
                                <ul class="parsley-errors-list filled"><li class="parsley-required">{{titleError}}</li></ul>
                                {{/if}}
                            </div>
                            <div class="form-group">
                                <label for="author">Author</label>
                                <input type="text" id="author" name="author" {{#if formData}} value="{{formData.author}}"{{/if}} class="form-control {{#if authorError}}parsley-error{{/if}}" placeholder="Author">
                                {{#if authorError}}
                                <ul class="parsley-errors-list filled"><li class="parsley-required">{{authorError}}</li></ul>
                                {{/if}}
                            </div>
                            <div class="form-group">
                                <label for="publisher">Publisher</label>
                                <input type="text" id="publisher" name="publisher" {{#if formData}} value="{{formData.publisher}}"{{/if}} class="form-control {{#if publisherError}}parsley-error{{/if}}" placeholder="Publisher">
                                {{#if publisherError}}
                                <ul class="parsley-errors-list filled"><li class="parsley-required">{{publisherError}}</li></ul>
                                {{/if}}
                            </div>
                            <div class="form-group">
                                <label for="isbn">ISBN</label>
                                <input type="text" id="isbn" name="isbn" {{#if formData}} value="{{formData.isbn}}"{{/if}} class="form-control {{#if isbnError}}parsley-error{{/if}}" placeholder="ISBN">
                                {{#if isbnError}}
                                <ul class="parsley-errors-list filled"><li class="parsley-required">{{isbnError}}</li></ul>
                                {{/if}}
                            </div>
                            <div class="form-group">
                                <label for="genre">Genre</label>
                                <input type="text" id="genre" name="genre" {{#if formData}} value="{{formData.genre}}"{{/if}} class="form-control {{#if genreError}}parsley-error{{/if}}" placeholder="Genre">
                                {{#if genreError}}
                                <ul class="parsley-errors-list filled"><li class="parsley-required">{{genreError}}</li></ul>
                                {{/if}}
                            </div>
                            <div class="form-group mb-3">
                                <label for="datePublished">Year Published</label>
                                <input data-provide="datepicker" data-date-min-view-mode="2" type="text" name="yearPublished" {{#if formData}} value="{{formData.yearPublished}}"{{/if}} class="form-control {{#if yearPublishedError}}parsley-error{{/if}}" placeholder="Year Published">
                                {{#if yearPublishedError}}
                                <ul class="parsley-errors-list filled"><li class="parsley-required">{{yearPublishedError}}</li></ul>
                                {{/if}}
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div> <!-- end col-->
                    </div>
                    <!-- end row -->
                </form>
            </div> <!-- end card-body -->
        </div> <!-- end card-->
    </div> <!-- end col-->
</div>
<!-- end row-->